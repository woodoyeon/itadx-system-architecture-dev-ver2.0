{
  "name": "itadx-mvp",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:libs": "pnpm --filter @itadx/common build && pnpm --filter @itadx/auth --filter @itadx/config --filter @itadx/audit --filter @itadx/websocket --filter @itadx/database build",
    "dev": "turbo dev",
    "dev:all": "concurrently \"turbo dev\" \"cd engine/engine-api && pip install -r requirements.txt && uvicorn main:app --reload --port 8000\"",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.4.22",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/swagger": "^7.4.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.25",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "concurrently": "^8.2.2",
    "express": "^4.18.0",
    "joi": "^17.12.0",
    "rxjs": "^7.8.0",
    "turbo": "^1.13.0",
    "typeorm": "^0.3.20",
    "typescript": "^5.4.0"
  }
}
